{
  "name": "@dcdavidev/vuoto",
  "version": "0.1.0",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "description": "Whitespace normalizer core for the vuoto ecosystem, ensuring clean and consistent source files.",
  "type": "module",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "default": "./dist/index.js"
    },
    "./actions": {
      "types": "./dist/actions/index.d.ts",
      "import": "./dist/actions/index.js",
      "require": "./dist/actions/index.cjs",
      "default": "./dist/actions/index.js"
    },
    "./helpers": {
      "types": "./dist/helpers/index.d.ts",
      "import": "./dist/helpers/index.js",
      "require": "./dist/helpers/index.cjs",
      "default": "./dist/helpers/index.js"
    },
    "./normalizers": {
      "types": "./dist/normalizers/index.d.ts",
      "import": "./dist/normalizers/index.js",
      "require": "./dist/normalizers/index.cjs",
      "default": "./dist/normalizers/index.js"
    },
    "./types": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/types/index.js",
      "require": "./dist/types/index.cjs",
      "default": "./dist/types/index.js"
    },
    "./vuoto": {
      "types": "./dist/vuoto.d.ts",
      "import": "./dist/vuoto.js",
      "require": "./dist/vuoto.cjs",
      "default": "./dist/vuoto.js"
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "vuoto": "./dist/vuoto.js"
  },
  "files": [
    "dist",
    "templates",
    "LICENSE"
  ],
  "dependencies": {
    "commander": "^14.0.1",
    "fast-glob": "^3.3.3",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@types/node": "^24.5.2",
    "tsdown": "^0.15.5",
    "typescript": "^5.9.2"
  },
  "nx": {
    "name": "vuoto",
    "targets": {
      "build": {
        "executor": "nx:run-commands",
        "options": {
          "command": "tsdown",
          "cwd": "packages/vuoto"
        },
        "outputs": [
          "{projectRoot}/dist"
        ]
      },
      "dev": {
        "executor": "nx:run-commands",
        "options": {
          "command": "tsdown --watch",
          "cwd": "packages/vuoto"
        }
      },
      "install": {
        "executor": "nx:run-commands",
        "options": {
          "command": "npm install --ignore-scripts"
        }
      }
    }
  }
}
