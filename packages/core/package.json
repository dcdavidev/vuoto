{
  "dependencies": {
    "tslib": "^2.3.0"
  },
  "description": "Whitespace normalizer core for vuoto ecosystem",
  "devDependencies": {
    "@types/node": "^20.19.9",
    "tsdown": "^0.15.5",
    "typescript": "^5.9.2"
  },
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    },
    "./normalize": {
      "import": "./dist/normalize/index.js",
      "require": "./dist/normalize/index.cjs",
      "types": "./dist/normalize/index.d.ts"
    }
  },
  "files": [
    "dist",
    "LICENSE"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "name": "@dcdavidev/vuoto-core",
  "nx": {
    "name": "vuoto-core",
    "targets": {
      "build": {
        "executor": "nx:run-commands",
        "options": {
          "command": "tsdown",
          "cwd": "packages/core"
        },
        "outputs": [
          "{projectRoot}/dist"
        ]
      },
      "dev": {
        "executor": "nx:run-commands",
        "options": {
          "command": "tsdown --watch",
          "cwd": "packages/core"
        }
      },
      "install": {
        "executor": "nx:run-commands",
        "options": {
          "command": "npm install --ignore-scripts"
        }
      }
    }
  },
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "types": "./dist/index.d.ts",
  "version": "0.0.1"
}
