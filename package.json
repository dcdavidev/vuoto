{
  "name": "@dcdavidev/source",
  "version": "0.0.0",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "nx run-many -t build",
    "commit": "cz",
    "fmt": "pnpm prettier --write .",
    "lint": "pnpm eslint --fix .",
    "lint:fmt": "pnpm run lint && pnpm run fmt",
    "prepare": "lefthook install",
    "release": "nx release --yes --verbose",
    "release:first": "nx release --first-release --yes --verbose"
  },
  "config": {
    "commitizen": {
      "path": "git-cz"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@cspell/cspell-types": "^9.6.0",
    "@nx/jest": "22.3.3",
    "@nx/js": "22.3.3",
    "@nx/node": "22.3.3",
    "@prettier/plugin-xml": "^3.4.2",
    "@swc-node/register": "~1.11.1",
    "@swc/core": "~1.15.8",
    "@swc/helpers": "~0.5.18",
    "@types/node": "25.0.9",
    "commitizen": "^4.3.1",
    "commitlint-config-spellbookx": "^0.4.1",
    "conventional-changelog-conventionalcommits": "^9.1.0",
    "cspell": "^9.6.0",
    "cspell-config-spellbookx": "^0.3.3",
    "cz-git": "^1.12.0",
    "eslint": "^9.39.2",
    "eslint-plugin-spellbookx": "^0.3.4",
    "lefthook": "^2.0.15",
    "nx": "22.3.3",
    "prettier": "^3.8.0",
    "prettier-config-spellbookx": "^0.4.2",
    "prettier-plugin-astro": "^0.14.1",
    "prettier-plugin-ini": "^1.3.0",
    "prettier-plugin-packagejson": "^2.5.22",
    "prettier-plugin-prisma": "^5.0.0",
    "prettier-plugin-properties": "^0.3.1",
    "prettier-plugin-sh": "^0.18.0",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "prettier-plugin-toml": "^2.0.6",
    "tslib": "^2.8.1",
    "typescript": "~5.9.3"
  }
}
